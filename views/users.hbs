<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>
  <link href="/css/users.css" rel="stylesheet">
</head>
<body>

  <h1>Users List</h1>

  {{#if users}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.mail}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No users found.</p>
  {{/if}}

</body>
</html>
